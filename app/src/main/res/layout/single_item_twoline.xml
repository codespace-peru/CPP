<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/small_margin">

    <TextView
        android:id="@+id/tvTitleItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titulo del Articulo"
        android:textStyle="bold"
        android:textSize="@dimen/text_title_article_size"
        android:textColor="@color/text_color1"/>

    <TextView
        android:id="@+id/tvTextItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contenido del Articulo"
        android:textSize="@dimen/text_content_article_size"
        android:textColor="@color/text_color1"/>

</LinearLayout>