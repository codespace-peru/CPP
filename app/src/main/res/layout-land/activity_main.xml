<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_land">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        android:id="@+id/mainLayout">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:textStyle="bold"
        android:textSize="@dimen/title_app_main"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:layout_marginTop="5dp"
        android:paddingRight="@dimen/abc_dropdownitem_text_padding_right"
        android:paddingLeft="@dimen/abc_dropdownitem_text_padding_left"
        android:textColor="@color/text_color3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/title_divider">
    </View>

    <ExpandableListView
        android:id="@+id/lvCppExpand"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:divider="@color/gridgroup_divider"
        android:dividerHeight="1dp"
        android:childDivider="@color/gridchild_divider">
    </ExpandableListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true">

        <com.google.android.gms.ads.AdView android:id="@+id/adView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            ads:adUnitId="ca-app-pub-4549935446415170/9721148848"
            ads:adSize="BANNER"/>

    </LinearLayout>
</RelativeLayout>