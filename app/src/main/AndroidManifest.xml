<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.com.codespace" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icono"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >

        <activity
            android:name="pe.com.codespace.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask">
        </activity>

        <activity
            android:name="pe.com.codespace.SplashScreenActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:label="@string/app_tit">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="pe.com.codespace.CppTextActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask">
        </activity>

        <activity
            android:name="pe.com.codespace.FavoritosActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask">
        </activity>

        <activity
            android:name="pe.com.codespace.NotesActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask">
        </activity>

        <activity
            android:name="pe.com.codespace.AddNoteActivity"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name="pe.com.codespace.SearchResultsActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask">
        </activity>

        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>
</manifest>
